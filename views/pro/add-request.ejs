<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/add-request.css" />
</head>
<body class="no-scroll">
<%- include('../includes/navbar') %>
<main class="text-center">
    <div class="d-flex justify-content-around">   
      
      <div id="firstColumn" class="text-center center-half full-flex">
          <div id="infoList" class="list-group"></div>
          <div id="selectors" class="form-group">
              <select
                class="form-control text-center pointer"
                id="doctypeSelector"
              >
                  <option value="" disabled selected>
                    Sélectionner un type de document ...
                  </option>
                  <% for (let doctype of doctypes) { %>
                      <option
                        value="<%= doctype._id %>"
                        isUnique="<%= doctype.isUnique %>"
                        periodicity="<%= doctype.periodicity %>"
                        hasIssuanceDate="<%= doctype.hasIssuanceDate %>"
                        hasExpirationDate="<%= doctype.hasExpirationDate %>"
                      >
                        <%= doctype.title %>
                      </option>
                  <% } %>
              </select>
          </div>
      </div>

        <div id="secondColumn" class="full-flex invisible">   
            <form         
            method="POST"
            action="/add-request"
            id="addRequestedDocForm"
            >       
                <button id="submitBtn" type="button" class="btn btn-primary">
                  Valider la requête
                </button>
            </form>
          <div id="tableContainer">
          <table class="table table-hover" 
          >
              <thead>
                  <tr class="table-primary">
                      <th>Type</th>
                      <th>Ancienneté</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody id="docTable">
              </tbody>
          </table>
        </div>
        <div id="alternativeInstruction"></div>
    </div>
    </main>
    <%- include('../includes/scripts') %>
    <script src="/js/forms.js"></script>
    <script src="/js/add-requested-doc.js"></script>
  </body>
</html>
