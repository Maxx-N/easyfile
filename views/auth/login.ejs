<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/forms.css" />
  </head>
  <body>
    <%- include('../includes/navbar') %>
    <%- include('../includes/page-title') %>
    <main>
      <%- include('../includes/error-feedback') %>
      <form class="text-center center-half" method="POST" action="/login">
        <fieldset>
          <div class="form-group">
            <label for="email">Mon e-mail</label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= oldInput.email %>"
              class="form-control text-center <%= validationErrors.some(err => err.param === 'email') ? 'invalid' : '' %>"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="form-group">
            <label for="password">Mon mot de passe</label>
            <input
              type="password"
              name="password"
              id="password"
              value="<%= oldInput.password %>"
              class="form-control text-center <%= validationErrors.some(err => err.param === 'password') ? 'invalid' : '' %>"
            />
          </div>
          <fieldset class="form-group">
            <div class="form-check">
              <label class="form-check-label pointer">
                <input
                  class="form-check-input pointer"
                  type="checkbox"
                  name="isPro"
                  id="statusCheckbox"
                  value="<%= oldInput.isPro %>"
                />
                Je suis professionnel.
              </label>
            </div>
          </fieldset>
          <button type="submit" class="btn btn-primary">
            Je me connecte !
          </button>
        </fieldset>
      </form>
    </main>
    <%- include('../includes/scripts') %>
    <script src="/js/forms.js"></script>
  </body>
</html>
